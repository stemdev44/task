<div class="ProductsUsed">
  {%  for block in section.blocks %}
    {%  assign product = all_products[block.settings.prod] %}
    <div class="ProdItem">
        <div class="ProdImg">
            <img src="{{ product.featured_image | img_url:'' }}" alt="">
        </div>
        <div class="ProdDesc">
            <p>{{ product.title }}</p>
        </div>
    </div>
  {% endfor %}
</div>

