  {
    "name": "Products Used",
    "settings": [

    
    ],
     "blocks": [
    {
      "type": "Product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "prod",
          "label": "Select Product"
        }]
        }]
  }
{% endschema %}

